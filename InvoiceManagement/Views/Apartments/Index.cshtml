@model IEnumerable<InvoiceManagement.Service.DTOs.ApartmentDTO>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Block
            </th>
            <th>
                ApartmentNumber
            </th>
            <th>
                Floor
            </th>
            <th>
                Apartment Type
            </th>
            <th>
                Is Not Empty
            </th>
            <th>
                User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Block.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApartmentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Floor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @item.User.Name @item.User.Surname
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class='btn btn-success ml-1 text-white'><i class="fas fa-pencil-alt" aria-hidden="true"></i> </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class='btn btn-warning ml-1 text-white'><i class="fas fa-search" aria-hidden="true"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class='btn btn-danger ml-1 text-white'><i class="far fa-trash-alt" aria-hidden="true"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
