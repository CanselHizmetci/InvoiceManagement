@model InvoiceManagement.Service.DTOs.InvoiceDTO

@{
    ViewData["Title"] = "Create";
}

<h3>Create</h3>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvoiceNumber" class="control-label"></label>
                <input asp-for="InvoiceNumber" class="form-control" />
                <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvoiceReadDate" class="control-label"></label>
                <input asp-for="InvoiceReadDate" class="form-control" />
                <span asp-validation-for="InvoiceReadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvoiceTypeId" class="control-label">Invoice Type</label>
                <select asp-for="InvoiceTypeId" class="form-control" asp-items="ViewBag.TypeList"></select>
            </div>
            <div class="form-group">
                <label asp-for="DueTime" class="control-label"></label>
                <input asp-for="DueTime" class="form-control" />
                <span asp-validation-for="DueTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

